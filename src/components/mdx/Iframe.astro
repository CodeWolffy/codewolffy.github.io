interface Props {
  src: string;
  title?: string;
}

const { src, title = 'åµŒå…¥è§†é¢‘' } = Astro.props;

// å¤„ç† Bilibili è§†é¢‘ï¼Œè‡ªåŠ¨æ·»åŠ  autoplay=0 å‚æ•°
const processedSrc = (() => {
  if (!src) return '';
  let url = src;
  if (url.includes('bilibili.com') && !url.includes('autoplay=0')) {
    const separator = url.includes('?') ? '&' : '?';
    url = `${url}${separator}autoplay=0`;
  }
  return url;
})();
---

{processedSrc && (
  <div class="my-6">
    <div class="video-wrapper !mb-0 !my-0">
      <iframe
        src={processedSrc}
        title={title}
        allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share; fullscreen"
        allowfullscreen
        loading="lazy"
      />
    </div>
    {(() => {
        if (!processedSrc || !processedSrc.includes('bilibili.com')) return null;
        
        const match = processedSrc.match(/video\/(BV\w+)/) || processedSrc.match(/bvid=(BV\w+)/);
        const bvid = match ? match[1] : null;
        
        if (bvid) {
            return (
                 <a 
                    href={`https://www.bilibili.com/video/${bvid}`} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-xs text-muted-foreground hover:text-primary transition-colors mt-0.5 block text-right lg:hidden"
