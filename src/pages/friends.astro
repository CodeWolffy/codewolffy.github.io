---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";

// 友链数据
const friends = [
    {
        name: "GitHub",
        description: "Where the world builds software",
        avatar: "https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png",
        url: "https://github.com"
    },
    {
        name: "Astro",
        description: "Build faster websites with less client-side JavaScript",
        avatar: "https://astro.build/assets/press/astro-icon-light-gradient.svg",
        url: "https://astro.build"
    },
    {
        name: "React",
        description: "A JavaScript library for building user interfaces",
        avatar: "https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg",
        url: "https://react.dev"
    },
    {
        name: "TypeScript",
        description: "JavaScript with syntax for types",
        avatar: "https://upload.wikimedia.org/wikipedia/commons/f/f5/Typescript.svg",
        url: "https://www.typescriptlang.org"
    },
    {
        name: "Tailwind CSS",
        description: "A utility-first CSS framework",
        avatar: "https://tailwindcss.com/_next/static/media/tailwindcss-mark.3c5441fc7a190fb1800d4a5c7f07ba4b1345a9c8.svg",
        url: "https://tailwindcss.com"
    },
    {
        name: "MDN Web Docs",
        description: "Resources for developers, by developers",
        avatar: "https://developer.mozilla.org/apple-touch-icon.6803c8f0.png",
        url: "https://developer.mozilla.org"
    }
];
---

<BaseLayout title="友情链接 | MyTechBlog" description="友情链接与推荐资源">
	<!-- 装饰背景 -->
	<div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
		<div class="absolute top-1/4 -left-20 w-[400px] h-[400px] rounded-full bg-blue-500/5 blur-[100px]"></div>
		<div class="absolute bottom-1/4 -right-20 w-[400px] h-[400px] rounded-full bg-purple-500/5 blur-[100px]"></div>
	</div>

    <div class="container mx-auto max-w-4xl py-8 lg:py-12">
        <!-- 页面标题 -->
		<div class="space-y-4 mb-12 text-center">
            <h1 class="inline-block font-bold text-4xl tracking-tight lg:text-5xl text-foreground">
                友情链接
            </h1>
            <p class="text-xl text-muted-foreground">
                优质资源与友站推荐
            </p>
        </div>
        
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {friends.map((friend, index) => (
                <a 
                    href={friend.url}
                    target="_blank"
                    rel="noopener noreferrer"
					class="group relative flex flex-col items-center p-6 rounded-xl bg-card overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl"
					style={`animation-delay: ${index * 100}ms;`}
                >
					<!-- 渐变边框效果 -->
					<!-- 边框效果 -->
					<div class="absolute inset-0 rounded-xl border border-border/50 group-hover:border-primary/50 transition-colors duration-500"></div>
					<div class="absolute inset-[1px] rounded-xl bg-card -z-5"></div>
					
					<!-- 悬停背景渐变 -->
					<div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-primary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-0"></div>
					
					<!-- 头像带旋转边框 -->
					<div class="relative mb-4 z-10">
						<div class="absolute -inset-1 rounded-full bg-primary/30 opacity-0 group-hover:opacity-75 blur-sm transition-opacity duration-500"></div>
                    	<div class="relative w-16 h-16 rounded-full overflow-hidden bg-muted flex items-center justify-center ring-2 ring-border group-hover:ring-transparent transition-all">
                        	<img 
                            	src={friend.avatar} 
                            	alt={friend.name}
                            	class="w-12 h-12 object-contain group-hover:scale-110 transition-transform duration-500"
                            	loading="lazy"
                        	/>
                    	</div>
					</div>
					
                    <h3 class="font-semibold text-lg group-hover:text-primary transition-colors duration-300 relative z-10">
                        {friend.name}
                    </h3>
                    <p class="text-sm text-muted-foreground text-center mt-2 line-clamp-2 relative z-10">
                        {friend.description}
                    </p>
					
					<!-- 外链图标 -->
                    <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                            <polyline points="15 3 21 3 21 9"></polyline>
                            <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                    </div>
                </a>
            ))}
        </div>
        
		<!-- 申请友链区域 -->
        <div class="mt-16 p-8 rounded-2xl glass-effect text-center relative overflow-hidden">
			<!-- 装饰元素 -->
			<div class="absolute top-0 left-1/2 -translate-x-1/2 w-32 h-1 bg-primary/50 rounded-full"></div>
			
            <h2 class="text-2xl font-bold mb-4 text-foreground">申请友链</h2>
            <p class="text-muted-foreground mb-6">
                如果您想交换友链，请通过以下方式联系我，并提供您的站点名称、描述和头像。
            </p>
            <a href="https://github.com/CodeWolffy" target="_blank" rel="noopener noreferrer">
                <Button size="lg" className="rounded-full px-8 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
                    联系我
                </Button>
            </a>
        </div>
    </div>
</BaseLayout>
