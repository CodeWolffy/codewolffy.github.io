---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
---

<BaseLayout title="404 - 页面未找到">
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <!-- 简洁的 404 数字 -->
    <h1 class="text-8xl md:text-9xl font-black text-foreground/25 mb-2 select-none">
      404
    </h1>

    <h2 class="text-xl md:text-2xl font-bold tracking-tight text-foreground mb-3">
      页面未找到
    </h2>
    
    <p class="text-muted-foreground max-w-md mx-auto mb-8 text-sm md:text-base">
      您访问的页面不存在或已被移除。
    </p>

    <!-- 操作按钮 -->
    <div class="flex flex-col sm:flex-row gap-3">
      <Button 
        id="go-back-btn" 
        variant="outline" 
        size="lg" 
        className="rounded-full gap-2 px-6 hover:scale-105 transition-transform duration-300 group"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:-translate-x-1 transition-transform"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        返回上页
      </Button>
      <a href="/">
        <Button 
          size="lg" 
          className="rounded-full gap-2 px-6 hover:scale-105 transition-transform duration-300"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          回到首页
        </Button>
      </a>
    </div>

    <!-- 快捷链接 -->
    <div class="mt-10 text-sm text-muted-foreground">
      <p class="mb-3">或者探索：</p>
      <div class="flex flex-wrap justify-center gap-2">
        <a href="/archives" class="px-3 py-1.5 rounded-full border border-border hover:border-foreground/30 hover:text-foreground transition-colors">归档</a>
        <a href="/categories" class="px-3 py-1.5 rounded-full border border-border hover:border-foreground/30 hover:text-foreground transition-colors">分类</a>
        <a href="/about" class="px-3 py-1.5 rounded-full border border-border hover:border-foreground/30 hover:text-foreground transition-colors">关于</a>
      </div>
    </div>

    <script>
      const backBtn = document.getElementById('go-back-btn');
      if (backBtn) {
        backBtn.addEventListener('click', () => {
          window.history.back();
        });
      }
    </script>
  </div>
</BaseLayout>
