---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import PostCard from "@/components/blog/PostCard.astro";

export const prerender = true;

export async function getStaticPaths() {
  const allPosts = await getCollection("blog", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
  const allTags = await getCollection('tags');

  return allTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags?.map((t) => t.id).includes(tag.id));
    return {
      params: { tag: tag.id },
      props: { posts: filteredPosts, tagName: tag.data.name },
    };
  });
}

const { tag } = Astro.params;
const { posts, tagName } = Astro.props;

// Get tags for the card labels
const allTags = await getCollection('tags');
const tagMap = new Map(allTags.map(t => [t.id, t.data.name]));
---

<BaseLayout title={`包含标签 #${tagName} 的文章`}>
    <div class="container mx-auto py-8 lg:py-12">
        <div class="mb-12 text-center space-y-4">
             <h1 class="text-3xl font-bold tracking-tight lg:text-5xl">
                标签: <span class="text-primary">#{tagName}</span>
            </h1>
            <p class="text-muted-foreground text-lg">
                共 {posts.length} 篇相关文章
            </p>
        </div>
        
        <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            {posts.map((post, index) => (
                <PostCard 
                    post={post}
                    index={index}
                    mainTagLabel={post.data.tags && post.data.tags.length > 0 ? tagMap.get(post.data.tags[0].id) : undefined}
                />
            ))}
        </div>
    </div>
</BaseLayout>
