---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPosts = posts.slice(0, 4);

// 计算标签及其文章数量
const allTags = posts.flatMap(post => post.data.tags || []);
const tagCounts: Record<string, number> = {};
allTags.forEach(tag => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
});
const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="MyTechBlog">
	<!-- Hero Section 增强版 -->
	<section class="relative overflow-hidden py-12 lg:py-16 bg-background">
		<!-- 动态渐变背景 -->
		<div class="absolute inset-0 -z-10">
			<!-- 网格背景 -->
			<div class="absolute inset-0 bg-white dark:bg-black bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
			
			<!-- 动态渐变光晕 -->
			<div class="absolute top-0 left-1/4 w-[500px] h-[500px] rounded-full bg-primary/10 blur-[100px] animate-pulse"></div>
			<div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] rounded-full bg-primary/10 blur-[80px] animate-pulse" style="animation-delay: 1s;"></div>
			<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] rounded-full bg-primary/10 blur-[60px] animate-pulse" style="animation-delay: 0.5s;"></div>
		</div>
		
		<!-- 浮动装饰元素 -->
		<div class="absolute inset-0 -z-5 overflow-hidden pointer-events-none">
			<div class="absolute top-20 left-10 w-3 h-3 rounded-full bg-blue-400/60 animate-float"></div>
			<div class="absolute top-40 right-20 w-2 h-2 rounded-full bg-purple-400/60 animate-float" style="animation-delay: 1s;"></div>
			<div class="absolute bottom-20 left-1/4 w-4 h-4 rounded-full bg-pink-400/50 animate-float" style="animation-delay: 2s;"></div>
			<div class="absolute top-1/3 right-1/3 w-2 h-2 rounded-full bg-green-400/50 animate-float" style="animation-delay: 1.5s;"></div>
		</div>

		<div class="container mx-auto flex flex-col items-center gap-4 text-center">
			<div class="space-y-3">
				<!-- 渐变动画标题 -->
				<h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl text-foreground pb-2">
					MyTechBlog
				</h1>
				<p class="mx-auto max-w-[600px] text-muted-foreground text-lg md:text-xl animate-in fade-in slide-in-from-bottom-5 duration-1000 delay-200">
					探索技术、编程与设计的边界。
				</p>
			</div>
			<div class="flex gap-4 mt-4 animate-in fade-in slide-in-from-bottom-6 duration-1000 delay-300">
				<a href="/about">
					<Button size="default" className="rounded-full px-6 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
						关于我
					</Button>
				</a>
				<a href="/tags">
					<Button size="default" variant="outline" className="rounded-full px-6 hover:scale-105 transition-all duration-300">
						浏览标签
					</Button>
				</a>
			</div>
		</div>
	</section>

	<!-- 最新文章区域 -->
    <section class="container mx-auto pt-4 pb-8 lg:pt-8 lg:pb-12">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold tracking-tight text-foreground">最新文章</h2>
            <a href="/archives" class="text-muted-foreground hover:text-primary transition-colors group flex items-center gap-1">
                查看全部 <span class="group-hover:translate-x-1 transition-transform">→</span>
            </a>
        </div>
        
		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			{latestPosts.map((post, index) => (
				<article 
					class="group relative flex flex-col space-y-3 rounded-xl p-6 bg-card border border-border hover:border-primary/30 transition-all duration-500 hover:-translate-y-2 hover:shadow-xl"
					style={`animation-delay: ${index * 100}ms;`}
				>
					
					{post.data.heroImage && (
                        <div class="aspect-video overflow-hidden rounded-lg bg-muted relative">
							<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                            <img
                                src={post.data.heroImage}
                                alt={post.data.title}
                                width={804}
                                height={452}
                                class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110"
                            />
                        </div>
					)}
                    <div class="flex-1 space-y-2 relative z-10">
                        <div class="flex items-center gap-2 text-sm text-muted-foreground">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('zh-CN')}
                            </time>
                            {post.data.tags && post.data.tags.length > 0 && (
                                <>
                                    <span>•</span>
                                    <span class="px-2 py-0.5 rounded-full text-xs bg-primary/10 text-primary">{post.data.tags[0]}</span>
                                </>
                            )}
                        </div>
                        <h3 class="text-xl font-bold leading-tight group-hover:text-primary transition-colors duration-300">
                            <a href={`/blog/${post.slug}`}>
                                {post.data.title}
                            </a>
                        </h3>
                        <p class="text-muted-foreground line-clamp-2 text-sm leading-relaxed">
                            {post.data.description}
                        </p>
                    </div>
					<a href={`/blog/${post.slug}`} class="absolute inset-0 z-20">
						<span class="sr-only">阅读 {post.data.title}</span>
					</a>
				</article>
			))}
		</div>
        {posts.length === 0 && (
            <div class="text-center py-20 text-muted-foreground">
                <p>暂无文章。请在 src/content/blog 中添加内容！</p>
            </div>
        )}
	</section>

    <!-- 标签云区域 -->
    <section class="container mx-auto py-12 lg:py-16">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold tracking-tight text-foreground">探索标签</h2>
            <a href="/tags" class="text-muted-foreground hover:text-primary transition-colors group flex items-center gap-1">
                查看全部 <span class="group-hover:translate-x-1 transition-transform">→</span>
            </a>
        </div>
        
        <div class="flex flex-wrap gap-3">
            {sortedTags.map(([tag, count], index) => (
                <a 
                    href={`/tags/${tag}`}
					class="group relative px-5 py-2.5 rounded-full bg-card border border-border/50 hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 overflow-hidden"
					style={`animation-delay: ${index * 50}ms;`}
                >
					<!-- 悬停渐变背景 -->
					<div class="absolute inset-0 bg-gradient-to-r from-primary/10 to-primary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <span class="font-medium relative z-10 group-hover:text-primary transition-colors">{tag}</span>
                    <span class="ml-2 text-xs text-muted-foreground relative z-10">
                        ({count})
                    </span>
                </a>
            ))}
        </div>
    </section>
</BaseLayout>


