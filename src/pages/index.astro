---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPosts = posts.slice(0, 4);

// 计算标签及其文章数量
const allTags = posts.flatMap(post => post.data.tags || []);
const tagCounts: Record<string, number> = {};
allTags.forEach(tag => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
});
const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="MyTechBlog">
	<section class="relative overflow-hidden py-6 lg:py-8 bg-background">
        <div class="absolute inset-0 -z-10 h-full w-full bg-white dark:bg-black bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]">
            <div class="absolute left-0 right-0 top-0 -z-10 m-auto h-[200px] w-[200px] rounded-full bg-primary/20 opacity-20 blur-[80px]"></div>
        </div>
		<div class="container mx-auto flex flex-col items-center gap-3 text-center">
            <div class="space-y-2">
                <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60 animate-in fade-in slide-in-from-bottom-4 duration-1000 pb-2">
                    MyTechBlog
                </h1>
                <p class="mx-auto max-w-[600px] text-muted-foreground text-base md:text-lg animate-in fade-in slide-in-from-bottom-5 duration-1000 delay-200">
                    探索技术、编程与设计的边界。
                </p>
            </div>
            <div class="flex gap-3 mt-3 animate-in fade-in slide-in-from-bottom-6 duration-1000 delay-300">
                <a href="/about">
                    <Button size="sm" className="rounded-full">关于我</Button>
                </a>
                <a href="/tags">
                    <Button size="sm" variant="outline" className="rounded-full">浏览标签</Button>
                </a>
            </div>
		</div>
	</section>

    <section class="container mx-auto px-4 pt-2 pb-6 lg:pt-4 lg:pb-8">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-3xl font-bold tracking-tight">最新文章</h2>
            <a href="/archives" class="text-muted-foreground hover:text-primary transition-colors">
                查看全部 →
            </a>
        </div>
        
		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			{latestPosts.map((post) => (
				<article class="group relative flex flex-col space-y-3 rounded-lg border p-6 hover:shadow-lg transition-shadow bg-card">
					{post.data.heroImage && (
                        <div class="aspect-video overflow-hidden rounded-md bg-muted">
                            <img
                                src={post.data.heroImage}
                                alt={post.data.title}
                                width={804}
                                height={452}
                                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                            />
                        </div>
					)}
                    <div class="flex-1 space-y-2">
                        <div class="flex items-center gap-2 text-sm text-muted-foreground">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString()}
                            </time>
                            {post.data.tags && post.data.tags.length > 0 && (
                                <>
                                    <span>•</span>
                                    <span>{post.data.tags[0]}</span>
                                </>
                            )}
                        </div>
                        <h3 class="text-2xl font-bold leading-tight group-hover:text-primary transition-colors">
                            <a href={`/blog/${post.slug}`}>
                                {post.data.title}
                            </a>
                        </h3>
                        <p class="text-muted-foreground line-clamp-3 leading-relaxed">
                            {post.data.description}
                        </p>
                    </div>
					<a href={`/blog/${post.slug}`} class="absolute inset-0">
						<span class="sr-only">阅读 {post.data.title}</span>
					</a>
				</article>
			))}
		</div>
        {posts.length === 0 && (
            <div class="text-center py-20 text-muted-foreground">
                <p>暂无文章。请在 src/content/blog 中添加内容！</p>
            </div>
        )}
	</section>

    <!-- 标签云区域 -->
    <section class="container mx-auto px-4 py-12 lg:py-16">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold tracking-tight">探索标签</h2>
            <a href="/tags" class="text-muted-foreground hover:text-primary transition-colors">
                查看全部 →
            </a>
        </div>
        
        <div class="flex flex-wrap gap-3">
            {sortedTags.map(([tag, count]) => (
                <a 
                    href={`/tags/${tag}`}
                    class="group relative px-4 py-2 rounded-full border bg-card hover:bg-primary hover:text-primary-foreground transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
                >
                    <span class="font-medium">{tag}</span>
                    <span class="ml-2 text-xs text-muted-foreground group-hover:text-primary-foreground/80">
                        ({count})
                    </span>
                </a>
            ))}
        </div>
    </section>
</BaseLayout>


