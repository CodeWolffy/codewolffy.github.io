---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
})).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const allCategories = await getCollection('categories');
const allTags = await getCollection('tags');

const categoryMap = new Map(allCategories.map(c => [c.id, c.data.name]));
const tagMap = new Map(allTags.map(t => [t.id, t.data.name]));

const latestPosts = posts.slice(0, 12);

// Calculate Tag Counts
const tagCounts: Record<string, { name: string, count: number, id: string }> = {};
posts.forEach(post => {
    post.data.tags?.forEach(tagRef => {
        const tagId = tagRef.id;
        const tagName = tagMap.get(tagId);
        if (tagName) {
             if (!tagCounts[tagId]) {
                 tagCounts[tagId] = { name: tagName, count: 0, id: tagId };
             }
             tagCounts[tagId].count++;
        }
    });
});
const sortedTags = Object.values(tagCounts).sort((a, b) => b.count - a.count);

// Calculate Category Counts
const categoryCounts: Record<string, { name: string, count: number, id: string }> = {};
posts.forEach(post => {
    if (post.data.category) {
        const catId = post.data.category.id;
        const catName = categoryMap.get(catId);
        if (catName) {
            if (!categoryCounts[catId]) {
                categoryCounts[catId] = { name: catName, count: 0, id: catId };
            }
            categoryCounts[catId].count++;
        }
    }
});
const sortedCategories = Object.values(categoryCounts).sort((a, b) => b.count - a.count);

// Limit items for homepage (Preview)
const topCategories = sortedCategories.slice(0, 3);
const topTags = sortedTags.slice(0, 8);
---

<BaseLayout title="狼码纪">
	<!-- Hero Section 增强版 -->
	<section class="relative overflow-hidden py-2 lg:py-4 bg-background">
		<!-- 动态渐变背景 -->
		<div class="absolute inset-0 -z-10">
			<!-- 网格背景 -->
			<div class="absolute inset-0 bg-white dark:bg-black bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
			
			<!-- 动态渐变光晕 -->
			<div class="absolute top-0 left-1/4 w-[500px] h-[500px] rounded-full bg-primary/10 blur-[100px] animate-pulse"></div>
			<div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] rounded-full bg-primary/10 blur-[80px] animate-pulse" style="animation-delay: 1s;"></div>
			<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] rounded-full bg-primary/10 blur-[60px] animate-pulse" style="animation-delay: 0.5s;"></div>
		</div>
		
		<!-- 浮动装饰元素 -->
		<div class="absolute inset-0 -z-5 overflow-hidden pointer-events-none">
			<div class="absolute top-20 left-10 w-3 h-3 rounded-full bg-blue-400/60 animate-float"></div>
			<div class="absolute top-40 right-20 w-2 h-2 rounded-full bg-purple-400/60 animate-float" style="animation-delay: 1s;"></div>
			<div class="absolute bottom-20 left-1/4 w-4 h-4 rounded-full bg-pink-400/50 animate-float" style="animation-delay: 2s;"></div>
			<div class="absolute top-1/3 right-1/3 w-2 h-2 rounded-full bg-green-400/50 animate-float" style="animation-delay: 1.5s;"></div>
		</div>

		<div class="container mx-auto flex flex-col items-center gap-4 text-center">
			<div class="space-y-3">
				<!-- 渐变动画标题 -->
				<h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl text-foreground pb-2">
					狼码纪
				</h1>
				<p class="mx-auto max-w-[600px] text-muted-foreground text-lg md:text-xl animate-in fade-in slide-in-from-bottom-5 duration-1000 delay-200">
					探索技术、编程与设计的边界。
				</p>
			</div>
			<div class="flex gap-4 mt-4 animate-in fade-in slide-in-from-bottom-6 duration-1000 delay-300">
				<a href="/about">
					<Button size="default" variant="outline" className="rounded-full px-6 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
						关于我
					</Button>
				</a>
				<a href="/categories">
					<Button size="default" variant="outline" className="rounded-full px-6 shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
						浏览分类/标签
					</Button>
				</a>
			</div>
		</div>
	</section>

	<!-- 最新文章区域 -->
    <section class="container mx-auto pt-2 pb-4 lg:pt-4 lg:pb-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold tracking-tight text-foreground">最新文章</h2>
            <a href="/archives" class="text-muted-foreground hover:text-primary transition-colors group flex items-center gap-1">
                查看全部 <span class="group-hover:translate-x-1 transition-transform inline-flex"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg></span>
            </a>
        </div>
        
		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			{latestPosts.map((post, index) => (
				<article 
					class="group relative flex flex-col space-y-3 rounded-xl p-6 bg-card border border-border hover:border-primary/30 transition-all duration-500 hover:-translate-y-2 hover:shadow-xl"
					style={`animation-delay: ${index * 100}ms;`}
				>
					
					{(post.data.coverImage || post.data.heroImage) && (
                        <div class="aspect-video overflow-hidden rounded-lg bg-muted relative">
							<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                            <img
                                src={post.data.coverImage || post.data.heroImage}
                                alt={post.data.title}
                                width={804}
                                height={452}
                                class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110"
                            />
                        </div>
					)}
                    <div class="flex-1 space-y-2 relative z-10">
                        <div class="flex items-center gap-2 text-sm text-muted-foreground">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
                            </time>
                            {post.data.tags && post.data.tags.length > 0 && (
                                <>
                                    <span>•</span>
                                    <span class="px-2 py-0.5 rounded-full text-xs bg-primary/10 text-primary">{tagMap.get(post.data.tags[0].id)}</span>
                                </>
                            )}
                        </div>
                        <h3 class="text-xl font-bold leading-tight group-hover:text-primary transition-colors duration-300">
                            <a href={`/blog/${post.slug}`}>
                                {post.data.title}
                            </a>
                        </h3>
                        <p class="text-muted-foreground line-clamp-2 text-sm leading-relaxed">
                            {post.data.description}
                        </p>
                    </div>
					<a href={`/blog/${post.slug}`} class="absolute inset-0 z-20">
						<span class="sr-only">阅读 {post.data.title}</span>
					</a>
				</article>
			))}
		</div>
        {posts.length === 0 && (
            <div class="text-center py-20 text-muted-foreground">
                <p>暂无文章。请在 src/content/blog 中添加内容！</p>
            </div>
        )}
	</section>

    <!-- 分类与标签区域 -->
    <section class="container mx-auto py-3 lg:py-4">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold tracking-tight text-foreground">热门话题</h2>
            <a href="/categories" class="text-muted-foreground hover:text-primary transition-colors group flex items-center gap-1">
                更多 <span class="group-hover:translate-x-1 transition-transform inline-flex"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg></span>
            </a>
        </div>
        
        <div class="space-y-10">
             {/* 分类列表 (Top 3) */}
             <div>
                <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                    <span class="w-1 h-5 bg-primary rounded-full"></span>
                    精选分类
                </h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    {topCategories.map((category) => {
                         return (
                            <a 
                                href={`/categories/${category.id}`}
                                class="group flex items-center justify-between p-4 rounded-xl bg-card border border-border/50 hover:border-primary/50 hover:shadow-md transition-all duration-300"
                            >
                                <span class="font-medium group-hover:text-primary transition-colors">{category.name}</span>
                                <span class="text-xs bg-secondary text-secondary-foreground px-2 py-0.5 rounded-full">{category.count}</span>
                            </a>
                         )
                    })}
                </div>
             </div>

             {/* 标签列表 (Top 8) */}
             <div>
                <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
                    <span class="w-1 h-5 bg-secondary-foreground/30 rounded-full"></span>
                    热门标签
                </h3>
                <div class="flex flex-wrap gap-3">
                    {topTags.map((tag, index) => (
                        <a 
                            href={`/tags/${tag.id}`}
                            class="group relative px-5 py-2.5 rounded-full bg-card border border-border/50 hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 overflow-hidden"
                            style={`animation-delay: ${index * 50}ms;`}
                        >
                            <!-- 悬停渐变背景 -->
                            <div class="absolute inset-0 bg-gradient-to-r from-primary/10 to-primary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                            <span class="font-medium relative z-10 group-hover:text-primary transition-colors">{tag.name}</span>
                            <span class="ml-2 text-xs text-muted-foreground relative z-10">
                                ({tag.count})
                            </span>
                        </a>
                    ))}
                </div>
             </div>
        </div>
    </section>
</BaseLayout>


